{
  "name": "mwanziamutua/commerce-ipayafrica",
  "description": "iPayAfrica integration for Craft Commerce 4.0+",
  "type": "craft-plugin",
  "keywords": [
    "ipayafrica",
    "mpesa",
    "commerce",
    "craftcms",
    "omnipay",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mwanzia Mutua",
      "homepage": "https://dimetechgroup.com/"
    }
  ],
  "support": {
    "email": "support@dimetechgroup.com",
    "issues": "https://github.com/mutuasm/commerce-ipayafrica/issues?state=open",
    "source": "https://github.com/mutuasm/commerce-ipayafrica",
    "docs": "https://github.com/mutuasm/commerce-ipayafrica",
    "rss": "https://github.com/mutuasm/commerce-ipayafrica/commits/master.atom"
  },
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0",
    "craftcms/commerce": "^4.0.0",
    "craftcms/commerce-omnipay": "^4.0.0",
    "jannza/ipayafrica": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "craft\\commerce\\ipayafrica\\": "src/"
    }
  },
  "extra": {
    "name": "iPayAfrica for Craft Commerce",
    "handle": "commerce-ipayafrica"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "craftcms/phpstan": "dev-main",
    "craftcms/ecs": "dev-main"
  },
  "scripts": {
    "phpstan": "phpstan --memory-limit=1G",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    },
    "platform": {
      "php": "8.0.2"
    }
  }
}
